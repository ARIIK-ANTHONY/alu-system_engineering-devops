#!/usr/bin/env bash
# This script installs and configures HAProxy to load balance between two web servers

# Install necessary dependencies
sudo apt-get -y update
sudo apt-get -y install software-properties-common

# Add the PPA repository for HAProxy 1.8
sudo add-apt-repository -y ppa:vbernat/haproxy-1.8
sudo apt-get update

# Install HAProxy
sudo apt-get -y install haproxy

# Enable HAProxy to start on boot
echo "ENABLED=1" | sudo tee /etc/default/haproxy

# Backup the default HAProxy configuration
sudo cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.backup

# Configure HAProxy to load balance web servers (round-robin algorithm)
cat <<EOF | sudo tee -a /etc/haproxy/haproxy.cfg
frontend http_front
    bind *:80
    default_backend http_back

backend http_back
    balance roundrobin
    server web-01 54.204.203.255:80 check
    server web-02 3.94.57.32:80 check
EOF

# Restart HAProxy service to apply the new configuration
sudo systemctl restart haproxy

# Check HAProxy status to ensure it's running
sudo systemctl status haproxy
