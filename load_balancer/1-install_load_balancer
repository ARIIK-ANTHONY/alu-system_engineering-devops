#!/usr/bin/env bash

# Install necessary dependencies
sudo apt-get -y update
sudo apt-get -y install software-properties-common

# Add the PPA repository for HAProxy 1.8
sudo add-apt-repository ppa:vbernat/haproxy-1.8
sudo apt-get update

# Install HAProxy
sudo apt-get -y install haproxy

# Enable HAProxy to start on boot
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

# Configure HAProxy to load balancing web servers (round-robin algorithm)
echo "listen 6187-web
    bind *:80
    mode http
    balance roundrobin
    server web-01 54.204.203.255:80 check
    server web-02 3.94.57.32:80 check
" | sudo tee -a /etc/haproxy/haproxy.cfg

# Restart HAProxy service to apply the new configuration
sudo systemctl restart haproxy

# Check HAProxy status to ensure it's running
sudo systemctl status haproxy
